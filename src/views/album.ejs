<% include partials/header.ejs %>

  <div class='container content'>
    <div class='col-sm-8 offset-2 album-main'>

      <div class='album-info header'>
        <h1><%= album.title %></h1>
        <h5><em> by <%= album.artist %></em></h5>
      </div>

      <div class='review-list content'>
        <h2 class='d-inline'>Reviews</h2>
        <a class='btn btn-primary float-right' href='/albums/<%= album.id %>/reviews/new' role="button">Add review</a>

        <% reviews.forEach(function(review) { %>
          <div class='review'>
            <h5><a href="/albums/<%= review.album_id %>"><%= review.title %></a></h5>
            <span>Posted on <%= review.date %></span>
            <p><%= review.body %></p>
            <span>by <%= review.user %></span>
          </div>
        <% }) %>
      </div>

    </div>
  </div>


<% include partials/footer.ejs %>
