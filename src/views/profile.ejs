<% include partials/header.ejs %>

<div class='container content'>
  <div class='row pt-5'>
    <div class='col-sm-3 pt-4'>
      <img class='rounded img-fluid' src='<%= userDetail.img_url %>'/>
    </div>

    <div class='col-sm-9 index-main'>
      <h1><strong><%= userDetail.name %></strong></h1>
      <h5>Email: <%= userDetail.email %></h5>
      <h6><small>Date joined: <%= userDetail.joined_on %></small></h6>
      <div class='pt-5'>

      <h2 class='header'>Reviews</h2>
      <div class='p-2'>
        <% reviews.forEach(function(review) { %>
          <div class='review'>
            <div class='d-inline'>
              <span class='h5'><a href="/albums/<%= review.album_id %>"><%= review.title %></a></span>
              <span class='float-right'><small>Posted on <%= review.date %></small></span>
            </div>
            <div class='d-inline-block'>
              <p><%= review.body %></p>
              <% if(userDetail.id == user.id){ %>
                <div class='float-right'>
                  <button type='button' class=' float-right btn btn-link tool-button'>
                  <img class='tool' src="/images/delete-button.svg" alt="delete-button">
                  </button>
                </div>
                <% } %>
            </div>
          </div>
        <% }) %>
      </div>

      </div>
    </div>
  </div>
</div>


<% include partials/footer.ejs %>
