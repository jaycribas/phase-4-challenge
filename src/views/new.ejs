<% include partials/header.ejs %>

<div class='container content'>
  <div class='col-sm-8 offset-2 p-5'>
    <h2>New review for <em><%= album.title %></em></h2>

    <form action='/albums/<%= album.id %>/reviews/new' method='post'>
      <input name='album_id' value='<%= album.id %>' type='hidden'>
      <input name='user_id' value='<%= user.id %>' type='hidden'>
      <textarea rows='8' class='form-control' name='body' autofocus required></textarea><br />
      <input type='submit' class='btn btn-primary' value='Submit'/>
    </form>
  </div>

</div>

